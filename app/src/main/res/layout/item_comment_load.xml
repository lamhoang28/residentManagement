<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6sp">
    <ImageView
        android:id="@+id/item_comment_ImageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="12sp"
        android:src="@drawable/profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_comment_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22sp"
        android:layout_marginLeft="12sp"
        android:layout_toRightOf="@+id/item_comment_ImageView"
        app:cardBackgroundColor="#f0f1f5"
        app:cardElevation="1sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp">
            <TextView
                android:id="@+id/item_comment_name"
                android:layout_width="150sp"
                android:layout_height="20sp"
                android:background="#B5B5B5"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/item_comment_message"
                android:layout_width="100sp"
                android:layout_height="15sp"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/item_comment_name"
                android:background="#B5B5B5"
                android:textSize="15sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>