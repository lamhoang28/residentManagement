<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6sp">

    <ImageView
        android:id="@+id/item_comment_ImageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="12sp"
        android:src="@drawable/profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_comment_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22sp"
        android:layout_marginLeft="12sp"
        android:layout_toRightOf="@+id/item_comment_ImageView"
        app:cardBackgroundColor="#eaf2fd"
        app:cardElevation="1sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp">
            <TextView
                android:id="@+id/item_comment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="lamhoang28"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/item_comment_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:layout_below="@+id/item_comment_name"
                android:text="lamhoang28"
                android:textSize="15sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:layout_marginLeft="24sp"
        android:layout_below="@+id/item_comment_CardView"
        android:layout_toRightOf="@+id/item_comment_ImageView"
        android:text="lamhoang28"
        android:maxLength="22"
        android:textColor="#9F9F9F"
        android:textSize="12sp"/>
</RelativeLayout>